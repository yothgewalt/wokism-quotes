{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    ".next",
    ".husky",
    "public",
    "node_modules"
  ]
}